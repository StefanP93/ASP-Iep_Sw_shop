@model IEPProjekatPS120511.Models.Order

@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    @using (Html.BeginForm("Create_O", "Orders", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>@HtmlHelpers.ShowLogo(ViewBag.ProductLogo) &nbsp;&nbsp;&nbsp; @ViewBag.ProductName</h2>
            <hr />
            <br>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col-md-10">
                    Buyer Info: @ViewBag.UserName &nbsp;&nbsp;&nbsp; @ViewBag.LastName

                    @Html.HiddenFor(model => model.ProductId, new { @Value = @ViewBag.ProductId })
                    @Html.HiddenFor(model => model.UserId, new { @Value = @ViewBag.UserId })

                    


                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Status:<br>
                    @Html.RadioButtonFor(model => model.Type, 0) Buy new product <br>
                    @Html.RadioButtonFor(model => model.Type, 1) Extend licence
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Price: @ViewBag.ProductPrice
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Buy" class="btn btn-default" />
                    
                </div>
            </div>
        </div>
    }


</body>
</html>
